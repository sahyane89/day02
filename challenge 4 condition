#include <stdio.h>
#include <math.h>

int main() 
{
   float a, b, c, delta, x0, x1, x2;
    printf("entrer a ");
    scanf("%f",&a);
    printf("entrer b");
    scanf("%f",&b);
    printf("entrer c");
    scanf("%f",&c);
    

       delta = pow(b,2) - (4*a*c);

        if (delta==0){
            22
          
        printf(" Si delta = 0 : L'equation   ax2+bx+c=0 a une unique solution : ");
        x0 = (-b)/(2*a);
            
        }
        
        else if (delta>0){
         printf(" Si delta > 0 : L'equation ax2+bx+c=0 a deux solutions :x1=(-b-sqrt(delta))/2*a et x2=(-b+sqrt(delta))/2*a ");

           x1=(-b-sqrt(delta))/2*a;
           x2=(-b+sqrt(delta))/2*a;

        }
        else{
            printf(" L'equation   ax2+bx+c=0 na pas de solution reelle");
}

    return 0;
}